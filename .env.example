# Required settings
LLM_CATCHER_OPENAI_API_KEY=your-api-key-here  # Organization or project API key

# Optional settings with defaults
LLM_CATCHER_LLM_MODEL=gpt-4
LLM_CATCHER_TEMPERATURE=0.2

# Exception Handling (default: UNHANDLED)
LLM_CATCHER_HANDLED_EXCEPTIONS=UNHANDLED
# LLM_CATCHER_HANDLED_EXCEPTIONS=ALL
# LLM_CATCHER_HANDLED_EXCEPTIONS=ValueError,TypeError,ValidationError

# Exceptions to Ignore (default)
LLM_CATCHER_IGNORE_EXCEPTIONS=KeyboardInterrupt,SystemExit

# Custom Prompts (optional)
LLM_CATCHER_CUSTOM_HANDLERS={"ValueError": "Please analyze this value error and provide: 1) The exact location, 2) The cause, 3) How to fix it"}